{% extends 'base.html.twig' %}
{% form_theme createUserForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Create a new user{% endblock %}

{% block body %}
    <div class="container">

        <!-- Message Header -->
        <div class="container mt-3">
            <div class="row col-12">
                <div class="col-2">
                    <img src="{{ asset('build/images/me_hello2_full.png') }}" alt="" width="150">
                </div>
                <div class="col-10">
                    <div class="alert alert-info mt-4">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Ullam repudiandae sit architecto officiis, quo ipsam delectus et recusandae sint earum esse impedit optio deserunt deleniti libero nostrum minus numquam. Repellat?
                    </div>
                </div>    
            </div>
        </div>

        <hr class="mt-0"/>

        <h1>Create new user</h1>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="container-sm mb-3" style="max-width:25rem"> 
        {{ form_start(createUserForm) }}
            {{ form_row(createUserForm.email) }}
            {{ form_row(createUserForm.name) }}
            {{ form_row(createUserForm.fullName) }}
            {{ form_row(createUserForm.plainPassword, {
                label: 'Password'
            }) }}

            <button type="submit" class="btn btn-primary">Create</button>
        {{ form_end(createUserForm) }}
        </div>
    </div>
{% endblock %}
