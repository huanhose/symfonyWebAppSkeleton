{% extends 'base.html.twig' %}

{% block title %}Users list{% endblock %}

{% block body %}
<div class="container">
    <h1>List users</h1>
    
    <p class="alert alert-info">
        List of registered users in the system. You can create new users, edit them or delete.
    </p>

    <table class="table table-striped table-hover">
        <caption class="caption-top">
            <strong>{{ list_users|length }} users</strong>
            <span class="p-5"> 
                <a href="{{ path('app_createUser') }}" title="Create a new user">New user</a> 
            </span>
        </caption>    
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Full name</th>
              <th scope="col">Verified</th>
              <th scope="col">&nbsp;</th>
            </tr>
        </thead>                  
        <tbody>
        {% for user in list_users %}        
            <tr>
                <td><a href="{{ path('users_user_profile', {id:user.id}) }}" title="Edit user">{{ user.name }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.verified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="#" title="Delete user">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>  
    </table>
    
</div>
{% endblock %}
